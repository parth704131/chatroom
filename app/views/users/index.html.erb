<div class="container">
  <h1 class="text-center">All Bloggers</h1>
  <div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
  </div>
  <% @users.each do |user| %>
    <div class="card text-center align-self-center w-75 m-auto shadow mb-5 bg-white rounded">
      <div class="card-header">
        <%= user.name%>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= link_to gravatar_for(user),user%></h5>
        <%=link_to 'Show Profile',user_path(user),class:"btn btn-outline-success" %>
        <% if logged_in? && user == current_user %>
          <%=link_to 'Edit Profile',edit_user_path(user),class:"btn btn-outline-info" %>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        joined <%=time_ago_in_words(user.created_at) %> ago
      </div>
    </div><br><br>
  <%end %>
</div>